generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Boss {
  id            String @id @default(cuid())
  name          String @unique
  imageUrl      String @unique
  minRespawnMin Int
  maxRespawnMin Int

  logs BossLog[]

  @@index([name])
}

model BossLog {
  id      String @id @default(cuid())
  orgId   String
  channel Int

  bossId String
  boss   Boss   @relation(fields: [bossId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 依你的查詢習慣調整 index；通常看板會用 createdAt 排序
  @@index([orgId, bossId, channel, createdAt])
}
