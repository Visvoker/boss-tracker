generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Boss {
  id            String @id @default(cuid())
  name          String @unique
  imageUrl      String @unique
  minRespawnMin Int
  maxRespawnMin Int

  logs BossLog[]

  @@index([name])
}

model BossLog {
  id        String    @id @default(cuid())
  orgId     String
  channel   Int
  killedAt  DateTime  @default(now())
  clearedAt DateTime?

  bossId String
  boss   Boss   @relation(fields: [bossId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orgId, bossId, channel, killedAt])
  @@index([orgId, bossId, channel, clearedAt])
}
